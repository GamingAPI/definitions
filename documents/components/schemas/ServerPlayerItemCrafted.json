{
	"$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
	"$id": "ServerPlayerItemCrafted",
  "required": [
    "steam_id",
    "item_uid",
    "item_id",
    "craft_timestamp",
    "amount"
  ],
  "properties": {
    "craft_timestamp": {
      "type": "string",
      "example": "2016-08-29T09:12:33.001Z"
    },
    "steam_id": {
      "type": "string",
      "description": "The player's steamID64, must be 17 chars long.",
      "pattern": "^[0-9]{17}$"
    },
    "item_uid": {
      "type": "integer"
    },
    "item_id": {
      "type": "integer"
    },
    "amount": {
      "type": "integer"
    }
  }
}