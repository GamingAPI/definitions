{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"$id": "ChatMessage",
	"required": [
	  "steam_id",
	  "player_name",
	  "message",
	  "is_admin",
    "timestamp"
	],
	"properties": {
    "steam_id": {
      "type": "string",
      "description": "The player's steamID64, must be 17 chars long.",
      "pattern": "^[0-9]{17}$"
    },
    "player_name": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "is_admin": {
      "type": "boolean"
    },
    "title": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "example": "2016-08-29T09:12:33.001Z"
    }
	}
}