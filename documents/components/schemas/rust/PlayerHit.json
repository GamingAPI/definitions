{
	"$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
	"$id": "PlayerHit",
  "required": [
    "steam_id",
    "position",
    "active_item"
  ],
  "properties": {
    "steam_id": {
      "type": "string",
      "description": "The player's steamID64, must be 17 chars long.",
      "pattern": "^[0-9]{17}$"
    },
    "position": {
      "$ref": "../generic/Vector3d.json"
    },
    "active_item": {
      "$ref": "./ActiveItem.json"
    }
  }
}